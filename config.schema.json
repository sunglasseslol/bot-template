{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bot Configuration Schema",
  "type": "object",
  "properties": {
    "bot": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" },
        "color": { "type": "string" },
        "footer": { "type": "string" }
      },
      "required": ["name"]
    },
    "features": {
      "type": "object",
      "properties": {
        "enableWelcomeMessages": { "type": "boolean" },
        "enableLogging": { "type": "boolean" },
        "enableCommandCooldowns": { "type": "boolean" },
        "enableErrorReporting": { "type": "boolean" }
      }
    },
    "defaults": {
      "type": "object",
      "properties": {
        "prefix": { "type": "string" },
        "language": { "type": "string" },
        "timezone": { "type": "string" }
      }
    },
    "limits": {
      "type": "object",
      "properties": {
        "maxCooldown": { "type": "number" },
        "maxMessageLength": { "type": "number" },
        "maxEmbedFields": { "type": "number" }
      }
    },
    "channels": {
      "type": "object",
      "properties": {
        "logChannel": { "type": ["string", "null"] },
        "errorChannel": { "type": ["string", "null"] },
        "welcomeChannel": { "type": ["string", "null"] }
      }
    },
    "embeds": {
      "type": "object",
      "properties": {
        "defaultColor": { "type": "string" },
        "errorColor": { "type": "string" },
        "successColor": { "type": "string" },
        "warningColor": { "type": "string" }
      }
    },
    "permissions": {
      "type": "object",
      "properties": {
        "defaultAdminRoles": { "type": "array", "items": { "type": "string" } },
        "defaultModRoles": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}

